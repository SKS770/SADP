Q.1


// Target interface
interface IVolt {
    int getVolt();
}

// Adaptee class
class Socket {
    public int getVolt120() {
        return 120;
    }
}

// Adapter class using Class Adapter approach (Inheritance)
class VoltAdapter extends Socket implements IVolt {
    private int outputVolt;

    public VoltAdapter(int v) {
        this.outputVolt = v;
    }

    @Override
    public int getVolt() {
        switch (outputVolt) {
            case 3: return 3;
            case 12: return 12;
            default: return getVolt120();
        }
    }
}

// Main class
public class MobileChargerAdapter {
    public static void main(String[] args) {
        IVolt v3 = new VoltAdapter(3);
        IVolt v12 = new VoltAdapter(12);
        IVolt v120 = new VoltAdapter(120);

        System.out.println("3 Volt Output: " + v3.getVolt() + "V");
        System.out.println("12 Volt Output: " + v12.getVolt() + "V");
        System.out.println("Default 120 Volt Output: " + v120.getVolt() + "V");
    }
}



Q.2


*a) Read your name and print Hello message
name = input("Enter your name: ")
print("Hello, " + name + "!")

*b) Read two numbers and print sum, difference, product, and division
a = float(input("Enter first number: "))
b = float(input("Enter second number: "))

print("Sum:", a + b)
print("Difference:", a - b)
print("Product:", a * b)
if b != 0:
    print("Division:", a / b)
else:
    print("Division: Cannot divide by zero")

*c) Word and character count of a given string
text = input("Enter a string: ")
words = len(text.split())
chars = len(text)

print("Word count:", words)
print("Character count:", chars)

*d) Area of a given shape (rectangle, triangle, circle)
import math

shape = input("Enter shape (rectangle/triangle/circle): ").lower()

if shape == "rectangle":
    length = float(input("Enter length: "))
    width = float(input("Enter width: "))
    area = length * width
elif shape == "triangle":
    base = float(input("Enter base: "))
    height = float(input("Enter height: "))
    area = 0.5 * base * height
elif shape == "circle":
    radius = float(input("Enter radius: "))
    area = math.pi * radius**2
else:
    area = None
    print("Invalid shape")

if area is not None:
    print("Area of", shape, "is:", area)
