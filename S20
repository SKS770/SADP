Q.1


import java.io.FilterInputStream;
import java.io.IOException;
import java.io.InputStream;

// Custom Decorator that converts all uppercase letters to lowercase
class LowerCaseInputStream extends FilterInputStream {

    protected LowerCaseInputStream(InputStream in) {
        super(in);
    }

    @Override
    public int read() throws IOException {
        int c = super.read();
        return (c == -1 ? c : Character.toLowerCase((char)c));
    }

    @Override
    public int read(byte[] b, int off, int len) throws IOException {
        int result = super.read(b, off, len);
        if (result == -1) return result;
        for (int i = off; i < off + result; i++) {
            b[i] = (byte) Character.toLowerCase((char)b[i]);
        }
        return result;
    }
}

public class j1 {
    public static void main(String[] args) {
        try {
            System.out.println("Enter text (Ctrl+D/Ctrl+Z to stop):");
            InputStream in = new LowerCaseInputStream(System.in);
            int c;
            while ((c = in.read()) != -1) {
                System.out.print((char)c);
            }
            in.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}



Q.2


*a) Read your name and print Hello message
name = input("Enter your name: ")
print("Hello, " + name + "!")

*b) Read two numbers and print sum, difference, product, and division
a = float(input("Enter first number: "))
b = float(input("Enter second number: "))

print("Sum:", a + b)
print("Difference:", a - b)
print("Product:", a * b)
if b != 0:
    print("Division:", a / b)
else:
    print("Division: Cannot divide by zero")

*c) Word and character count of a given string
text = input("Enter a string: ")
words = len(text.split())
chars = len(text)

print("Word count:", words)
print("Character count:", chars)

*d) Area of a given shape (rectangle, triangle, circle)
import math

shape = input("Enter shape (rectangle/triangle/circle): ").lower()

if shape == "rectangle":
    length = float(input("Enter length: "))
    width = float(input("Enter width: "))
    area = length * width
elif shape == "triangle":
    base = float(input("Enter base: "))
    height = float(input("Enter height: "))
    area = 0.5 * base * height
elif shape == "circle":
    radius = float(input("Enter radius: "))
    area = math.pi * radius**2
else:
    area = None
    print("Invalid shape")

if area is not None:
    print("Area of", shape, "is:", area)
